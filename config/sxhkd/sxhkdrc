# Disable trackpad middle click // https://bbs.archlinux.org/viewtopic.php?pid=1818239#p1818239
~button2
    echo -n | xsel -n -i
~control + c
    echo -n | xsel -n -i 

# Reload sxhkd
super + shift + r
    pkill -usr1 -x sxhkd; notify-send -i input-keyboard 'sxhkd' 'Reloaded config'

# terminal emulator
super + Return
    kitty

# program launcher
super + @space
    $HOME/.config/rofi/launchers/type-1/launcher.sh 

# quit/restart bspwm
super + alt + {q,r}
    $HOME/.config/bspwm/launch.sh {quit,reload}

# close and kill
super + {_,shift + }q
    bspc node -{c,k}

# Rotate current group of nodes
super + r
    bspc node @/ -R 90

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# swap the current node and the biggest window
super + g
    bspc node -s biggest.window

# Toggle floating
super + d
    if [ -z "$(bspc query -N -n focused.floating)" ]; then \
        bspc node focused -t floating; \
    else \
        bspc node focused -t tiled; \
    fi

# set the window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
    bspc node -g {marked,locked,sticky,private}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
# super + {_,shift + }c
super + shift + bracket{left,right}
    bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
   bspc {desktop -f,node -d} '^{1-9,10}' --follow
    
# Send to desktop
super + shift + {1-9,0}
    bspc node -d '^{1-9,10}' --follow

# hide windows
super + alt + h
	bspc node -g hidden=true

# unhide windows
super + alt + shift + h
    bspc node $(bspc query -N -n .hidden | tail -n1) -g hidden=off


####################################################
##                 F / Media KEYS                 ##
####################################################

# Volume control
XF86AudioMute
    pamixer --toggle-mute
XF86AudioLowerVolume
    pamixer --decrease 5
XF86AudioRaiseVolume
    pamixer --increase 5
XF86AudioMicMute
    pamixer --default-source --toggle-mute

XF86MonBrightnessDown
    xbacklight -dec 5
XF86MonBrightnessUp
    xbacklight -inc 5
XF86Display
    $HOME/.config/bspwm/launch.sh reload
XF86WLAN
    nohup nm-applet; nohup blueman-applet

XF86Messenger
   bspc desktop -f '1' --follow
XF86Go
    /usr/lib/brave-bin/brave --profile-directory=Default --app-id=kjgfgldnnfoeklkmfkjfagphfepbbdan
Cancel
    # NotImplemented
XF86Favorites
    # NotImplemented