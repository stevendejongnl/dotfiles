function _bluetoothreset(){
  if lsmod | grep -q btusb; then
    echo "Removing btusb"
    sudo rmmod btusb
    echo "Sleeping for 15 seconds"
    sleep 15
  fi

  echo "Adding btusb"
  sudo modprobe btusb
}
alias bluetoothreset="_bluetoothreset"
alias btreset="_bluetoothreset"
alias bt-reset="_bluetoothreset"

function _pip(){
  if [ $1 = "search" ]; then
    pip_search "$2";
  else pip "$@";
  fi;
}
alias pip="_pip"

function markdown(){
