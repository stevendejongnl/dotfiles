    nohup flatpak run org.gnome.gitlab.somas.Apostrophe $2 > /dev/null 2>&1
    return
  fi
  if [ $2 = "--open" ] || [ $2 = "-o" ]; then
    nohup flatpak run org.gnome.gitlab.somas.Apostrophe $1 > /dev/null 2>&1 
